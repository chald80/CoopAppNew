@page
@model CoopApp.AllFoodsModel
@{
    ViewData["Title"] = "AllFoods";
}

<h1> AllFoods </h1>
<table class="table">
    <thead>
        <tr>
            <th>VareNummer</th>
            <th>Navn</th>
            <th>Pris</th>
            <th>Producent</th>
            <th>SidsteSalgsDato</th>
            <th>Fedt</th>
            <th>Kulhydrat</th>
            <th>Protein</th>
            <th>ImageName</th>
        </tr>
    </thead>
    <tbody>
    @if(Model.Foods.Count!=0)
        {        
        @foreach (var item in Model.Foods)
        {
        <tr>
            <td>@item.VareNummer</td>
            <td>@item.Navn</td>
            <td>@item.Pris</td>
            <td>@item.Producent</td>
            <td>@item.SidsteSalgsDato</td>
            <td>@item.Fedt</td>
            <td>@item.Kulhydrat</td>
            <td>@item.Protein</td>
            <td><img src="~/Images/@item.ImageName" width="60" height="70"></td>
            <td>
                <a asp-page="/Orders/ShoppingCart" asp-route-vareNummer="@item.VareNummer"
                   class="btn btn-success btn-group-lg pull-right">
                    Add To Cart
                </a>
            </td>
        </tr>
        }
        }
    </tbody>
</table>

