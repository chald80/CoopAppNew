@page 
@model CoopApp.ShoppingCartModel
@{
    ViewData["Title"] = "ShoppingCart";
}
<h1>ShoppingCart</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Image</th>
            <th class="text-right">Price</th>
        </tr>
    </thead>
    @if (Model.OrderedFoods.Count != 0)
    {
        <tbody>
            @foreach (var item in Model.OrderedFoods)
            {
                <tr>
                    <td class="text-center">@item.VareNummer</td>
                    <td class="text-left">@item.Navn</td>
                    <td>
                        <img src="~/Foods/@item.ImageName" width="60" height="70">
                    </td>
                    <td class="text-right">@item.Pris.ToString("c")</td>
                    <td>
                        <form method="post">
                            <button asp-page-handler="Delete" asp-route-isbn="@item.VareNummer"
                                    class="btn btn-danger btn-group-lg pull-right">
                                Delete-From-Chart
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.ChartService.CalculateTotalPrice().ToString("c")
                </td>
            </tr>
        </tfoot>
    }
</table>
<div class="text-center">
    <a asp-page="/Foods/AllFoods" class="btn btn-primary">Continue shopping</a>
    <a asp-page="/Orders/CheckOut" class="btn btn-primary">Check_Out</a>
</div>


